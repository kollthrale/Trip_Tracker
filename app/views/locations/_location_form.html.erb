<% if @location.errors.any? %>
	<ul>
		<% @location.errors.full_messages.each do |error| %>
			<li><%= error %></li>
			<% end %>
	</ul>
<% end %>
<div class="container">
<%= form_for [@tripp, @location] do |f| %>
	<div class='input-field'>
	<%= f.label  :name %>
	<%= f.text_field :name %>
	</div>
	<div>
	<%= f.label :category %>
	<br />
	<%= f.select :category, Location.category %>
	</div>
	<div class='input-field'>
	<%= f.label :hours %>
	<%= f.text_field :hours %>
	</div>
	<div>
	<%= f.label :cost %>
	<%= f.select :cost,  options_for_select([["Select One", ""], "$", "$$", "$$$", "$$$$"]) %>
	</div>
	<a class="waves-effect waves-light btn"><%= f.submit %></a>
<% end %>
</div>