<% if @address.errors.any? %>
	<ul>
		<% @address.errors.full_messages.each do |error| %>
			<li><%= error %></li>
			<% end %>
	</ul>
<% end %>
<%= form_for [@tripp, @location, @address] do |f| %>
	<%= f.label :street  %>
	<%= f.text_field :street %>
	<br />
	<%= f.label :city %>
	<%= f.text_field :city%>
	<br />
	<%= f.label :state %>
	<%= f.text_field :state %>
	<br />
	<%= f.label :zip %>
	<%= f.number_field :zip %>
	<br />
	<%= f.hidden_field :location_id, value: @location.id %>
	<%= f.submit %>
<% end %>
