<nav>
  <div class="nav-wrapper">
    <div class="col s12">
      <a href=<%= tripps_path %> class="breadcrumb">All Tripps</a>
      <a href="#!" class="breadcrumb">Tripp</a>
    </div>
  </div>
</nav>
<div class="row">
  <div class="col s12">
    <div class="card clear-opacity">
      <div class="card-content white-text">
        <span class="card-title no-opacity"><h2><%= @tripp.name %></h2></span>
        <p>
        	<% if @tripp.vacation %>
        		<h3>Your Vacation</h3>
        	<% else %>
        		<h3>Your Business Trip</h3>
        	<% end %>
        		<h2><%= @tripp.date %> for <%= @tripp.duration %> Days</h2>
        	<div>
        		<%= render(partial: 'location_list') %>
        	</div>
				</p>
      </div>
      <div class="card-action">
      <a><%= link_to "Add Location", new_tripp_location_path(@tripp) %></a>
       <a><%= link_to "Edit Tripp", edit_tripp_path(@tripp) %></a>
       <a><%= link_to "Delete Tripp", tripp_path(@tripp), method: :delete, data: {confirm: "Are you sure you want to delete this Tripp?"} %></a>
      </div>
    </div>
  </div>
</div> 