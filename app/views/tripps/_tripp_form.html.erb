<% if @tripp.errors.any? %>
	<ul>
		<% @tripp.errors.full_messages.each do |error| %>
			<li><%= error %></li>
			<% end %>
	</ul>
<% end %>

<%= form_for @tripp do |f| %>
	<%= f.label  :name %>
	<%= f.text_field :name %>
<br />
	<%= f.label :vacation %>
	<%= f.check_box :vacation %>
<br />
	<%= f.label :date %>
	<%= f.date_field :date %>
<br />
	<%= f.label :duration %> (Days)
	<%= f.select :duration, (1..31).to_a %>
<br />
	<%= f.submit %>
<% end %>
<br />
